<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_basic_choice"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAdditionBasicCheck"
        android:layout_width="262dp"
        android:layout_height="74dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#080859"
        android:elevation="15dp"
        android:fontFamily="casual"
        android:text="Check your answer"
        android:textAllCaps="false"
        android:textColor="#FFEEBA"
        android:textSize="24sp"
        android:textStyle="bold"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#A8433103" />

    <TextView
        android:id="@+id/AddBasicFirstNumber"
        android:layout_width="137dp"
        android:layout_height="88dp"
        android:layout_marginTop="50dp"
        android:foregroundTint="#080859"
        android:textAlignment="center"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plusSignTextView"
        android:layout_width="137dp"
        android:layout_height="88dp"
        android:layout_marginTop="50dp"
        android:foregroundTint="#080859"
        android:text="+"
        android:textAlignment="textStart"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AddBasicSecondNumber"
        android:layout_width="137dp"
        android:layout_height="88dp"
        android:layout_marginTop="5dp"
        android:foregroundTint="#080859"
        android:textAlignment="center"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddBasicFirstNumber" />

    <TextView
        android:id="@+id/lineTextView"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="215dp"
        android:text="_________"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/AddBasicAnswerEditText"
        android:layout_width="240dp"
        android:layout_height="115dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAdditionBasicCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>